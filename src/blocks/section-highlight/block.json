{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bright-lives/section-highlight",
	"version": "0.1.0",
	"title": "Section Highlight",
	"category": "sections",
	"icon": "align-pull-right",
	"description": "A full width section with a title, description, button and image.",
	"example": {},
	"supports": {
		"html": false,
		"align": false
	},
	"textdomain": "section-highlight",
	"editorScript": "file:./index.js",
	"viewScript": ["file:./view.js", "section-highlight-view-script"],
	"attributes": {
		"title": {
			"type": "string",
			"default": ""
		},
		"content": {
			"type": "string",
			"default": ""
		},
		"imageUrl": {
			"type": "string",
			"default": ""
		},
		"imageAlt": {
			"type": "string",
			"default": ""
		},
		"orientation": {
			"enum": ["normal", "reversed"],
			"default": "normal"
		},
		"backgroundGradient": {
			"type": "boolean",
			"default": true
		}
	}
}